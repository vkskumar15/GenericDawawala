<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:backgroundTint="@color/white"
        android:background="@drawable/cv_grey_strock"
        android:padding="@dimen/dp_10"
        android:elevation="@dimen/dp_10">


        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:checked="false" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_addres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Jaipur, Rajasthan - 302013 "
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/txt_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_addres"
                android:layout_marginStart="50dp"
                android:layout_marginTop="7dp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_address"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/linear_lay_remove_address"
                android:layout_weight="1"
                android:backgroundTint="#FB8689"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/cv_grey_strock">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_remove"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_10"
                    android:text="Remove"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/linear_lay_edit_address"
                android:backgroundTint="#97DDFB"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/cv_grey_strock">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_edit"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_10"
                    android:text="Edit"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>