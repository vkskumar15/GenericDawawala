<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/filterIv"
                        android:visibility="gone"
                        android:layout_width="@dimen/space55"
                        android:layout_height="@dimen/space40"
                        android:src="@drawable/doc"
                        android:layout_centerVertical="true"/>



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logo"
                        android:visibility="visible"
                        android:elevation="4dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="@dimen/space50"
                        android:layout_height="@dimen/space50"
                        android:src="@drawable/doc"
                        android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/appbarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text16"/>

                    <ImageView
                        android:id="@+id/iv_wallet"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space5"
                        android:layout_marginRight="26dp"
                        android:src="@drawable/threedwallet"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/cartIv"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/iv_wallet"
                        android:src="@drawable/threedcart"
 />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

</RelativeLayout>