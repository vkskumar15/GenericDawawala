<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        app:cardCornerRadius="@dimen/space12"
        android:layout_margin="@dimen/space10"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/space5"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space10"
                android:layout_gravity="center"
                android:text="Tell us the symptom that's bothering you most"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:layout_gravity="top"
                android:id="@+id/symptom"
                android:background="@drawable/stroke_box"
                android:gravity="top"
                android:hint="Please type your health issue in details."
                android:padding="@dimen/space10"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/space12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_marginRight="@dimen/space20"
                    android:layout_marginBottom="@dimen/space20"
                    android:background="@drawable/btn_bg"
                    android:padding="10dp"
                    android:text="Next"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>