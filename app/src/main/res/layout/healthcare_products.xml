<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rect_corners"
    android:backgroundTint="@color/light_green_color"
    android:layout_margin="10dp">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productImgV"
        android:src="@drawable/ic_drugs_capsules_and_pills"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/stroke_box"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AL-MITY PLUS TABLET"
        android:id="@+id/productNameTv"
        android:fontFamily="@font/nunito"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:ellipsize="marquee"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 250.00"
        android:id="@+id/productPriceTv"
        android:fontFamily="@font/nunito"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD TO CART"
        android:id="@+id/addCartTv"
        android:fontFamily="@font/nunito"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/appcolor"
        android:background="@drawable/bottom_round_corners_list"/>

</LinearLayout>