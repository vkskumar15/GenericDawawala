<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.homefragments.ProceedOnlineConsultationFragment"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <ImageView
                    android:id="@+id/proceedOnlineConsutBackImg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_marginStart="@dimen/space20"
                    app:tint="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="ONLINE CONSULTATION"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:paddingTop="20dp"
                android:backgroundTint="#e1f6e3"
                android:paddingBottom="20dp"
                android:background="@drawable/full_round_corners_strock_grey"
                android:elevation="@dimen/space10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/med_cate_background"
                        android:padding="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_available"
                            android:text="Available When You Need"
                            android:padding="10dp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_available"
                            android:src="@drawable/ic_baseline_arrow_forward_24"
                            android:padding="5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/full_round_corners"
                            app:tint="@color/testColor1" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/untitled_1__2_"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginBottom="@dimen/space5"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Consult verified and trusted speciality doctors from your convenient location and time."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:backgroundTint="#e1e5fe"
                android:background="@drawable/full_round_corners_strock_grey"
                android:elevation="@dimen/space10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/med_cate_background"
                        android:padding="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_chat"
                            android:text="Chat &amp; Call Consultation"
                            android:padding="10dp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_chat"
                            android:src="@drawable/ic_baseline_arrow_forward_24"
                            android:padding="5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/full_round_corners"
                            app:tint="@color/testColor1" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/_2__6_"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginBottom="@dimen/space5"
                    android:padding="10dp"
                    android:text="Consult verified and trusted speciality doctors from your convenient location and time."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:backgroundTint="#ee9261"
                android:background="@drawable/full_round_corners_strock_grey"
                android:elevation="@dimen/space10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/med_cate_background"
                        android:padding="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_assessment"
                            android:text="Online health Risk Assessment"
                            android:padding="10dp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_assessment"
                            android:src="@drawable/ic_baseline_arrow_forward_24"
                            android:padding="5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/full_round_corners"
                            app:tint="@color/testColor1" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/_3__3_"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginBottom="@dimen/space5"
                    android:text="Consult verified and trusted speciality doctors from your convenient location and time."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:backgroundTint="#e1f6e3"
                android:background="@drawable/full_round_corners_strock_grey"
                android:elevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/med_cate_background"
                        android:padding="5dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_discount"
                            android:text="Discount on Online Consultation"
                            android:padding="10dp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_discount"
                            android:src="@drawable/ic_baseline_arrow_forward_24"
                            android:padding="5dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/full_round_corners"
                            app:tint="@color/testColor1" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/_4__4_"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginBottom="@dimen/space5"
                    android:text="Consult verified and trusted speciality doctors from your convenient location and time."/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>