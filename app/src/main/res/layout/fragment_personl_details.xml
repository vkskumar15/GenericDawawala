<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space50"
        android:background="@color/appcolor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/space10"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginStart="@dimen/space10"
            android:layout_marginEnd="@dimen/space20"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/space20"
            android:layout_toRightOf="@+id/back"
            android:text="@string/personal_details"
            android:textColor="@color/white" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space20"
                android:src="@drawable/doc"
                app:civ_border_color="@color/red"
                app:civ_border_width="2dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/card4"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginTop="@dimen/space25"
                android:layout_marginEnd="@dimen/space10"
                android:layout_marginRight="@dimen/space20"
                app:cardCornerRadius="@dimen/space10"
                app:cardElevation="@dimen/space6"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_medicines"
                        android:layout_width="@dimen/space30"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:src="@drawable/ic_baseline_account_circle_24"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_toRightOf="@+id/iv_medicines"
                        android:text="Vikas Kumar"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/space14" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/card4"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginTop="@dimen/space5"
                android:layout_marginEnd="@dimen/space10"
                android:layout_marginRight="@dimen/space20"
                app:cardCornerRadius="@dimen/space10"
                app:cardElevation="@dimen/space6"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_medicines2"
                        android:layout_width="@dimen/space30"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:src="@drawable/ic_baseline_email_24"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_toRightOf="@+id/iv_medicines2"
                        android:text="Vikas@gmail.com"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/space14" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/card4"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginTop="@dimen/space5"
                android:layout_marginEnd="@dimen/space10"
                android:layout_marginRight="@dimen/space20"
                app:cardCornerRadius="@dimen/space10"
                app:cardElevation="@dimen/space6"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_medicines3"
                        android:layout_width="@dimen/space30"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:src="@drawable/ic_phone2"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/phone_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_toRightOf="@+id/iv_medicines3"
                        android:text="+91 9876543219"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/space14" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/card4"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginTop="@dimen/space5"
                android:layout_marginEnd="@dimen/space10"
                android:layout_marginRight="@dimen/space20"
                app:cardCornerRadius="@dimen/space10"
                app:cardElevation="@dimen/space6"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_medicines4"
                        android:layout_width="@dimen/space30"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:src="@drawable/sex"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_toRightOf="@+id/iv_medicines4"
                        android:text="Male"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/space14" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/card4"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginTop="@dimen/space5"
                android:layout_marginEnd="@dimen/space10"
                android:layout_marginRight="@dimen/space20"
                app:cardCornerRadius="@dimen/space10"
                app:cardElevation="@dimen/space6"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_medicines5"
                        android:layout_width="@dimen/space30"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:src="@drawable/ic_baseline_calendar_today_24"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_toRightOf="@+id/iv_medicines5"
                        android:text="1997-15-08"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/space14" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/card4"
                android:layout_marginStart="@dimen/space10"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginTop="@dimen/space5"
                android:layout_marginEnd="@dimen/space10"
                android:layout_marginRight="@dimen/space20"
                app:cardCornerRadius="@dimen/space10"
                app:cardElevation="@dimen/space6"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_medicines6"
                        android:layout_width="@dimen/space30"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:src="@drawable/ic_baseline_location_on_24"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space10"
                        android:layout_toRightOf="@+id/iv_medicines6"
                        android:text="1997-15-08"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/space14" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space30"
                android:layout_marginTop="@dimen/space30"
                android:layout_marginRight="@dimen/space30"
                android:layout_marginBottom="2dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/nunito"
                android:foreground="@drawable/ripple"
                android:padding="10dp"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
